                        <li><a href="#"><i class="fa fa-file-text-o" aria-hidden="true"></i>Welcome @User.Identity.Name </a></li>
                        @if (Request.IsAuthenticated)
                        {
                            <li><a href="@Url.Action("Logout", "Account")" class="fa fa-sign-out"><span>Logout</span></a></li>

                        }
                        else
