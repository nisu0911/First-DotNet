                            <ul class="nav navbar-nav ">
                                <li class=" active"><a href="@Url.Action("Index", "Home")" class="hyper "><span>Home</span></a></li>

                                @{
                                    List<tblCategory> myMenu = MyMenu.GetMenus();

                                    foreach (var item in myMenu)
                                    {
                                        <li>
                                            <a href="@Url.Action("ProductList", "Home",new {id=item.CategoryID })" class="hyper">@item.CategoryName</a>
                                            @{
                                                List<tblCategory> mysubmenu = MyMenu.GetSubMenus(item.CategoryID);

                                                if (mysubmenu.Count > 0)
                                                {
                                                    <ul class="dropdown-menu">
                                                        @foreach (var itm in mysubmenu)
                                                        {
                                                            <li><a href="@Url.Action("","",new {id=itm.CategoryID })">@item.CategoryID</a></li>
                                                        }
                                                    </ul>

                                                }
                                            }
                                        </li>
                                    }
                                }
                                @if (Request.IsAuthenticated)
                                {
                                    <li><a href="@Url.Action("LogOut", "Account")" class="hyper"><span>Logout</span></a></li>

                                }
                                else
                                {
                                    <li><a href="@Url.Action("Signup","Account")" class="hyper"> <span>Sign up</span></a></li>
                                    <li><a href="@Url.Action("Login", "Account")" class="hyper"><span>Login</span></a></li>
                                }
                            </ul>
                        </div>
                    </nav>
